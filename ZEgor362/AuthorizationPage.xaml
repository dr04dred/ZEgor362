<Page x:Class="ZEgor362.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZEgor362"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="550">
            <TextBox x:Name="TextBoxLogin" Margin="10"/>
            <PasswordBox x:Name="PassBox" Margin="10" />
            <Button Margin="10" Content="Logins" Click="LoginButton"/>
            <Button Margin="10" Content="Registretion"  Click="ButtonRegistration" />
        </StackPanel>
    </Grid>
</Page>
