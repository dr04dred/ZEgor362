<Page x:Class="ZEgor362.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZEgor362"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="550">
            <TextBox x:Name="TextBoxLogin" Margin="10"/>
            <TextBox x:Name="TextBoxNSP" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Margin="10" />
            <ComboBox x:Name="Roll" Margin="10"></ComboBox>
            <TextBox x:Name="Group" Margin="10"></TextBox>
            <Button Margin="10" Content="Login" Click="Button_Click"/>
            <Button Margin="10" Content="Register"/>
        </StackPanel>
    </Grid>
</Page>
