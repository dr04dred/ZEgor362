<Page x:Class="ZEgor362.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZEgor362"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="#99958C">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="550">
            <Label Content="Login"></Label>
            <TextBox x:Name="Login"  Margin="3"/>
            <Label Content="Password"></Label>
            <PasswordBox x:Name="Password" Margin="3" />
            <Label Content="FirstName"></Label>
            <TextBox x:Name="FirstName" Margin="3"/>
            <Label Content="Secondname"></Label>
            <TextBox x:Name="Secondname" Margin="3"/>
            <Label Content="Patronymic"></Label>
            <TextBox x:Name="Patronymic" Margin="3"/>
            <Label Content="Role"></Label>
            <ComboBox x:Name="Role" Margin="3"></ComboBox>
            <Label Content="Group"></Label>
            <ListBox x:Name="Group" Margin="3" Height="15"></ListBox>
            <Button Margin="10" Content="Login" Click="Button_Click"/>
            <Button Margin="10" Content="Register" Click="Reg"/>
        </StackPanel>
    </Grid>
</Page>
