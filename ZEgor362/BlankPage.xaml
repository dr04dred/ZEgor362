<Page x:Class="ZEgor362.BlankPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZEgor362"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BlankPage">

    <Grid Background="#99958C">
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Left">
            <ComboBox Width="250" ></ComboBox>
        </StackPanel>
        <StackPanel Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button Height="20" Width="200" Margin="20" Content="Add"></Button>
            <Button Height="20" Width="200" Content="Changed" ></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Height="20" Width="200" Content="Exit" Click="Escape" ></Button>
        </StackPanel>
    </Grid>
</Page>
